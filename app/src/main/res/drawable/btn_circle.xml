<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#80000000"/> <!-- 按下时半透明 -->
            <corners android:radius="24dp"/>
            <stroke
                android:width="1.3dp"
            android:color="#FF000000"/> <!-- 边框颜色设为黑色 -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/> <!-- 默认透明 -->
            <corners android:radius="24dp"/>
            <stroke
                android:width="1.3dp"
            android:color="#FF000000"/> <!-- 边框颜色设为黑色 -->
        </shape>
    </item>
</selector>