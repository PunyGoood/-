<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">


    <!-- 时钟按钮 -->

    <!-- 设置按钮 -->

    <!-- 话筒按钮 -->

    <!-- 键盘按钮 -->

    <!-- 图片按钮 -->

    <Button
        android:id="@+id/button_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@mipmap/icon_history"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"

        android:drawableLeft="@mipmap/icon_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="语音翻译"
        app:layout_constraintCircle="@+id/button_keyboard"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="413dp"
        android:background="@drawable/btn_circle"/>

    <!--<Button
        android:id="@+id/button_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="708dp"
        android:text="个人中心"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />-->

    <Button
        android:id="@+id/button_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本翻译"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:background="@drawable/btn_circle"/>

    <Button
        android:id="@+id/button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片翻译"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_keyboard"
        app:layout_constraintCircle="@+id/button_keyboard"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="100dp"
        tools:layout_editor_absoluteX="33dp"
        android:background="@drawable/btn_circle"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:gravity="center"
        android:hint="欢迎使用圣人翻译"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button_keyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649" />


</androidx.constraintlayout.widget.ConstraintLayout>



